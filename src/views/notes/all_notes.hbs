<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-center">
            {{title}}
            <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>
            {{description}}
          </p>
          <form action="/notes/delete/{{_id}}?_method=delete" method="post">
            <input type="hidden" name="_method" value="delete">
            <button class="btn btn-danger w-100 btn-sm" type="submit">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead">
          No hay tareas para mostrar aun
        </p>
        <a href="/notes/add" class="btn btn-success w-100">Â¡Crea una!</a>
      </div>
    </div>

  {{/each}}
</div>