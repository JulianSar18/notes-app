<div class="col-md-4 mx-auto" >
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit_note/{{note._id}}?_method=put" method="post">             
            <input type="hidden" name="_method" value="put">  
            <div class="mt-3">
                <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}">                          
            </div>    
            <div class="mt-3">
                <textarea name="description" class="form-control">{{note.description}}</textarea>                
            </div> 
            <div class="mt-3">
                <button class="btn btn-primary w-100" type="submit">Save</button>
            </div>
            </form>
        </div>
    </div>
</div>